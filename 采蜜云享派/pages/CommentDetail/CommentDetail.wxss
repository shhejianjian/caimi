@import "/pages/PublicWxss/PublicWxss.wxss";
.topView{
  padding-top: 20rpx;
  width: 100%;
  height: 300rpx;
  background-image: linear-gradient(-180deg, #41C3FD 0%, #08A4FF 100%);
}
.top-userView{
  padding-top: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 #006FFF;
  border-radius: 10rpx 10rpx 0 0;
}
.commentView{
  margin-left: 20rpx;
  display: flex;
}
.comment-image{
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
}
.comment-username{
  margin-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #4A4A4A;
  letter-spacing: 0;
}
.comment-content{
  margin-left: 20rpx;
  margin-right: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4A4A4A;
  letter-spacing: 0;
}
.comment-bottom{
  margin-top: 10rpx;
  padding-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comment-bottom2{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comment-time{
  width: 350rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  margin-left: 100rpx;
}
.comment-pinglunView{
  display: flex;
  align-items: center;
  
}
.comment-dianzanView{
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}
.pinglunView-image{
  margin-right: 15rpx;
  height: 30rpx;
  width: 30rpx;
}

.pinglunView-count{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9B9B9B;
  letter-spacing: 0;
}
.topFirstView{
  padding-top: 16rpx;
  /* margin-top: 20rpx;  */
  margin-left: -10rpx;
  margin-right: -10rpx;
  height: 100rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
.topSecondView{
  padding-top: 16rpx;
  margin-left: -10rpx;
  margin-right: -10rpx;
  padding-bottom: 110rpx;
  background: #FFFFFF;
  box-shadow: 0 -16rpx 16rpx -16rpx rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
.comment-line{
  margin: 20rpx 40rpx 20rpx 40rpx;
  background:  #E6E6E6;
  height: 1rpx;
}
.bottomTitleView{
  margin-top: 16rpx;
  margin-left: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom-title{
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #4A4A4A;
  letter-spacing: 0;
}
.bottom-sort{
  margin-right: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #9B9B9B;
  letter-spacing: 0;
}
.huifufloatView{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFD100;
  height: 100rpx;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 100rpx;
}
.commentInputView{
  padding-top: 10rpx;
  position: relative;
  margin-top: -100rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 -16rpx 16rpx -16rpx rgba(0,111,255,0.50);
  border-radius: 10rpx ;
}
.comment-input{
  margin: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4A4A4A;
  letter-spacing: 0;
  background: #F5F5F5;
  padding: 10rpx;
  border-radius: 5rpx;
}