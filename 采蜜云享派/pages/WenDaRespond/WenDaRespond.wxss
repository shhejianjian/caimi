@import "/pages/PublicWxss/PublicWxss.wxss";
.topView{
  width: 100%;
  height: 200rpx;
  background-image: linear-gradient(-180deg, #41C3FD 0%, #08A4FF 100%);
}
.topFirstView{
  padding-top: 16rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
.topSecondView{
  padding-top: 16rpx;
  margin-left: -10rpx;
  margin-right: -10rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
 .topThirdView{
  padding-top: 30rpx;
  margin-left: -10rpx;
  margin-right: -10rpx;
  background: #FFFFFF;
  box-shadow: 0 -16rpx 16rpx -16rpx rgba(0,111,255,0.50);
  border-radius: 10rpx;
  padding-bottom: 100rpx;
} 
.lesson-title{
  margin-top: 15rpx;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.lessonListTitle{
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #FFD100;
  letter-spacing: 0;
}
.liuyanTitle{
  /* width: 120rpx; */
  padding: 0rpx 0rpx 0rpx 50rpx;
  text-align: center;
  margin-right: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #FFD100;
  letter-spacing: 0;
}
.comment-line{
  margin: 20rpx 40rpx 10rpx 40rpx;
  background:  #E6E6E6;
  height: 1rpx;
}
.text-section{
  margin-top: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  
  letter-spacing: 0;
  line-height: 34rpx;
}
.placeholder{
  color: #9B9B9B;
}
.textareaView{
  width: 100%;
  height: 800rpx;
}
.images-wrapper {
  padding: 40rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.images-wrapper-text {
  font-size: 28rpx;
}
.images-list {
  display: flex;
  /* margin-top: 20rpx; */
  flex-wrap: wrap;
}
.images-image {
  width: 30%;
  height: 200rpx;
  margin: 10rpx;
}
.image-plus {
  border: 1px solid #999;
  position: relative;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}
.yuyinImage{
  width: 120rpx;
  height: 100rpx;
}
.yuyinView{
  margin-left: 20rpx;
}