@import "/pages/PublicWxss/PublicWxss.wxss";
.topView{
  width: 100%;
  height: 200rpx;
  background-image: linear-gradient(-180deg, #41C3FD 0%, #08A4FF 100%);
}
.topFirstView{
  padding-top: 16rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
.topSecondView{
  padding-top: 16rpx;
  margin-left: -10rpx;
  margin-right: -10rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
 .topThirdView{
  padding-top: 30rpx;
  margin-left: -10rpx;
  margin-right: -10rpx;
  background: #FFFFFF;
  box-shadow: 0 -16rpx 16rpx -16rpx rgba(0,111,255,0.50);
  border-radius: 10rpx;
  padding-bottom: 100rpx;
} 
.shop-lessonType{
  display: flex;
  align-items: center;
}
.lessonTypeImage{
  margin-left: -40rpx;
  width: 256rpx;
  height: 50rpx;
}
.lessonTypeTitle{
   margin-left: -180rpx; 
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.questionAndAnswerView{
  padding: 24rpx 40rpx 24rpx 40rpx;
  display: flex;
  align-items: center;
}
.view-image{
  width: 90rpx;
  height: 90rpx;
}
.view-title{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #4A4A4A;
  letter-spacing: 0;
  margin-left: 40rpx;
}
.line{
  margin-left: 40rpx;
  margin-right: 40rpx;
  opacity: 0.5;
  background: #E6E6E6;
  height: 1rpx;
}
.shop-item{
  padding: 20rpx 40rpx 20rpx 40rpx;
}

.shop-topView{
  margin-top: 20rpx;
  /* margin-left: 40rpx; */
  margin-right: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shop-userView{
  display: flex;
  align-items: center;
}
.user-icon{
  border-radius: 50%;
  height: 90rpx;
  width: 90rpx;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 8rpx 0 #006FFF;
}
.nameAndTime{
  margin-left: 40rpx;
}
.user-name{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4A4A4A;
  letter-spacing: 0;
}
.user-time{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  white-space: nowrap;
  overflow-x: hidden;
  width: 380rpx;
  text-overflow: ellipsis;
}
.weinidianzanView{
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #9B9B9B;
  letter-spacing: 0;
}