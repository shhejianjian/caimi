@import "/pages/PublicWxss/PublicWxss.wxss";
.TopView{
  width: 100%;
  height: 520rpx;
  background-image: linear-gradient(-180deg, #41C3FD 0%, #08A4FF 100%);
}
.topSearchView{
  display: flex;
  width: 100%;
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
}
.topSearchImg{
  width: 50rpx;
  height: 50rpx;
}
.topSearchInput{
  width: 530rpx;
  height: 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.userView{
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  margin-left: 60rpx;
  
}
.userIcon{
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 8rpx 0 #006FFF;
  height: 120rpx;
  width: 120rpx;
}
.userName{
  font-family: PingFangSC-Semibold;
font-size: 28rpx;
color: #FFFFFF;
letter-spacing: 0;
  margin-left: 40rpx;
}

.learnTitle{
  margin-left: 40rpx;
  font-family: PingFangSC-Regular;
font-size: 24rpx;
color: #FFFFFF;
letter-spacing: 0;
}
.topFirstView{
  margin-top: 40rpx;
  padding-top: 16rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 300rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,111,255,0.50);
  border-radius: 10rpx;
}
.topSecondView{
  padding-top: 16rpx;
  margin-left: -10rpx;
  margin-right: -10rpx;
