.help {
position: fixed;
z-index: 100;
top: 50%;
left: 0;
width: 100%;
height: auto;
display: flex;
align-items: center;
justify-content: center;
}

.box {
position: relative;
display: flex;
flex-direction: column;
align-items: stretch;
width: 80%;
background: #fff;
border-radius: 10px;
box-shadow: 0 0 50px rgba(22,22,22,.35);
transform: translate3d(0,-400rpx,0);
}
.box-hd {
display: flex;
align-items: center;
justify-content: center;
height: 80rpx;
border-bottom: 1px solid #eee;
}
.box-title {
font-family: PingFangSC-Semibold;
font-size: 40rpx;
color: #FFD100;
letter-spacing: 0;
}
.box-close {
position: absolute;
right: 20rpx;
width: 35rpx;
height: 35rpx;
padding: 15rpx;
}
.box-content{
  margin: 40rpx;
  font-family: PingFangSC-Regular;
font-size: 24rpx;
color: #9B9B9B;
letter-spacing: 0;
line-height: 34rpx;
}
